{
  "compilerOptions": {
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "../src/**/*",
    "../../src/**/*"
  ],
  "exclude": [
    "../node_modules"
  ]
}
